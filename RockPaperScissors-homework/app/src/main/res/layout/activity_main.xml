<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnPaper"
        android:backgroundTint="@android:color/transparent"
        android:src="@drawable/paper"
        android:layout_alignParentTop="true"
        android:layout_above="@+id/btnLizard"
        android:layout_alignEnd="@+id/btnScissors" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnRock"
        android:backgroundTint="@android:color/transparent"
        android:src="@drawable/rock"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnScissors"
        android:backgroundTint="@android:color/transparent"
        android:src="@drawable/scissors"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnSpock"

        android:src="@drawable/rsz_spock"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/btnLizard" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnLizard"
        android:backgroundTint="@android:color/transparent"
        android:src="@drawable/rsz_lizard"
        android:layout_below="@+id/btnRock"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
